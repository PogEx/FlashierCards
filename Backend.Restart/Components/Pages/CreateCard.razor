@page "/card"
@rendermode InteractiveServer


<PageTitle>Card</PageTitle>

<div class="d-flex justify-content-center align-items-center position-relative" style="height: 100vh;">
    <div class="d-flex">
        <div class="card-body d-flex justify-content-center align-items-center" style="width: 54rem; height: 18rem;">
            <CreateCardComponent Title="Question"></CreateCardComponent>
        </div>
        <div class="card-body d-flex justify-content-center align-items-center" style="width: 54rem; height: 18rem;">
            <CreateCardComponent Title="Answer"></CreateCardComponent>
        </div>
    </div>
</div>

<button class="btn btn-secondary position-absolute top-50 start-0 translate-middle" style="margin-right: 100px ">
    <span class="material-symbols-outlined fix">
        arrow_back
    </span>
</button>

<button class="btn btn-secondary position-absolute top-50 start-100 translate-middle" style="margin-right: 100px ">
    <span class="material-symbols-outlined fix">
        arrow_forward
    </span>
</button>

<button class="btn btn-success position-absolute top-100 start-50 translate-middle rounded-circle">
    <span class="material-symbols-outlined fix">
        check
    </span>
</button>